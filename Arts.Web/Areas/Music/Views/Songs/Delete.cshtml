@model MediaAlbumItem

@{
    ViewData["Title"] = "Delete Song: " + Model.Title;
}
<div class="page-header blank"></div>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <h2 class="panel-heading">Delete Song</h2>
            <div class="panel-body">
                <h4>Are you sure you want to delete this?</h4>
                <hr />
                <h4><strong>@Model.Title</strong></h4>
                <h5>Album: @Model.MediaAlbum.ToString()</h5>
                <small>Created: @Model.DateCreated.ToString("dd-MM-yyyy @ HH:mm")</small><br />
                <small>Location: @Html.DisplayFor(model => model.MediaUrl)</small>
                <hr />
                @if (!string.IsNullOrWhiteSpace(Model.MediaUrl))
                {
                    <a target="_blank" href="@Model.MediaUrl" class="btn btn-success btn-xs">
                        <span class="glyphicon glyphicon-play"></span>&nbsp; Play
                    </a>
                }
            </div>
            <div class="panel-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-default"><i class="fa fa-arrow-left"></i> No, take me back</a>
                    <button type="submit" value="Delete" class="btn btn-danger"><i class="fa fa-trash"></i> Yes, sure</button>
                </form>
            </div>
        </div>
    </div>
</div>