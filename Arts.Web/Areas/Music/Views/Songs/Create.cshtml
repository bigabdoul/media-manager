@model MediaAlbumItemViewModel

@{
    ViewData["Title"] = "Add a New Song";
}

<h2 class="page-header">@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                @await Html.PartialAsync("_MediaAlbumIdSelect")
            </div>
            <div class="form-group">
                <label for="MediaUrl" class="control-label">Cover Photo</label>
                <input type="file" asp-for="MediaUrl" />
                <span asp-validation-for="MediaUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsFavorite" /> @Html.DisplayNameFor(model => model.IsFavorite)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Create</button>
                <a asp-action="Index" class="btn btn-default pull-right"><i class="fa fa-arrow-left"></i> Back to List</a>
            </div>
            <input type="hidden" name="returnurl" value="@Url.Action()" />
        </form>
    </div>
    <div class="col-md-4">
        <img src="#" alt="Cover photo" class="img-responsive album-cover" />
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
