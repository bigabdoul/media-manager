@model MediaAlbumItem

@{
    ViewData["Title"] = "Song Details";
    var album = Model.MediaAlbum;
}
<div class="page-header blank"></div>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <h3 class="panel-heading">@ViewBag.Title</h3>
            <div class="panel-body">
                <h4>@Model.Title</h4>
                <small>Location: @Html.DisplayFor(model => model.MediaUrl)</small>
                <hr />
                <div class="pull-left">
                    <h5>
                        <a target="_blank" href="@Model.MediaUrl" class="btn btn-success btn-xs pull-left" title="Play Song">
                            <span class="glyphicon glyphicon-play"></span>&nbsp;Play <span>Song</span>
                        </a>
                    </h5>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            Song @Html.DisplayNameFor(model => model.Title)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Title)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.IsFavorite)
                        </dt>
                        <dd>
                            <i class="fa fa-star@(Model.IsFavorite?" active":"")"></i>&nbsp;
                            @(Model.IsFavorite?"Yes":"No")
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.MediaType)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.MediaType)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.DateCreated)
                        </dt>
                        <dd>
                            @Model.DateCreated.ToString("dd-MM-yyyy @ HH:mm")
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.DateModified)
                        </dt>
                        <dd>
                            @Model.DateModified.ToString("dd-MM-yyyy @ HH:mm")
                        </dd>
                    </dl>
                </div>
                <div class="pull-right">
                    <h5><a asp-controller="Albums" asp-action="Details" asp-route-id="@album.Id">Album Info</a></h5>
                    @if (!string.IsNullOrWhiteSpace(album.MediaUrl))
                    {
                        <img src="@album.MediaUrl" alt="@album.Title" class="img-responsive" width="100" />
                    }
                    <p>
                        @album.ToString() <br />
                        <small>@album.Genre</small>
                    </p>
                </div>

            </div>
            <div class="panel-footer">
                <a asp-action="Index" class="btn btn-default"><i class="fa fa-arrow-left"></i> Back to List</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fa fa-edit"></i> Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger pull-right" title="Delete Song"><i class="fa fa-trash"></i></a>
            </div>
        </div>
    </div>
</div>